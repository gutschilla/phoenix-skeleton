<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.errors != [] do %>
    <p style="color: red">Oops, something went wrong!</p>
  <% end %>

  <p>
    <label>
      <span>Name:</span>
      <%= text_input f, :name %>
    </label>
  </p>

  <p>
    <%= submit "Submit" %>
  </p>
<% end %>
